{
  "name": "@rustoma/rutom-core",
  "version": "0.0.1",
  "description": "React headless component library",
  "license": "MIT",
  "author": "rustoma",
  "keywords": [],
  "files": [
    "dist",
    "README.md"
  ],
  "types": "dist/index.d.ts",
  "main": "./dist/rutom-core.umd.js",
  "module": "./dist/rutom-core.es.js",
  "exports": {
    ".": {
      "import": "./dist/rutom-core.es.js",
      "require": "./dist/rutom-core.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^8.17.1",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.19",
    "@vitejs/plugin-react": "^2.1.0",
    "c8": "^7.12.0",
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "jsdom": "^20.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.5.0",
    "vitest": "^0.23.2"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/rustoma"
  }
}
